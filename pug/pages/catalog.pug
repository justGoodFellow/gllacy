        | Сливочное мороженое
      form.catalog__form
        .catalog__form-row
          //- fieldset.catalog__filters-group
            legend
              h3.catalog__filters-title
                | Стоимость
            .catalog__filters-cost.range-filter
              .range-filter__range-controls
                .range-filter__scale
                  .range-filter__bar(style='width: 65%;')
                  .range-filter__toggle.range-filter__min-toggle
                  .range-filter__toggle.range-filter__max-toggle
              .range-filter__price-controls
                .range-filter__price.range-filter__min-price
                  label(for='from')
                    | От
                  input(id='from', type='text', value='0')
                .range-filter__price.range-filter__max-price
                  label(for='to')
                    | До
                  input(id='to', type='text', value='5000')
          fieldset.catalog__filters-group
            legend
              h3.catalog__filters-title
                | Жирность
            div
              .radiobox
                input.radiobox__input(type='radio', id='zero', name='fat-content', checked)
                label.radiobox__label(for='zero')
                  span
                    | 0%
              .radiobox
                input.radiobox__input(type='radio', id='to-10', name='fat-content', checked)
                label.radiobox__label(for='to-10')
                  span
                    | До 10%
              .radiobox
                input.radiobox__input(type='radio', id='to-30', name='fat-content')
                label.radiobox__label(for='to-30')
                  span
                    | До 30%
              .radiobox
                input.radiobox__input(type='radio', id='above-30', name='fat-content')
                label.radiobox__label(for='above-30')
                  span
                    | Выше 30%
        .catalog__form-row
          fieldset.catalog__filters-group
            legend
              h3.catalog__filters-title
                | Наполнители
            div
              .checkbox
                input.checkbox__input(type='checkbox', id='chocolate', checked)
                label.checkbox__label(for='chocolate')
                  | шоколадные
              .checkbox
                input.checkbox__input(type='checkbox', id='sugar-powders', checked)
                label.checkbox__label(for='sugar-powders')
                  | сахарные присыпки
              .checkbox
                input.checkbox__input(type='checkbox', id='fruit')
                label.checkbox__label(for='fruit')
                  | фрукты
              .checkbox
                input.checkbox__input(type='checkbox', id='syrups')
                label.checkbox__label(for='syrups')
                  | сиропы
              .checkbox
                input.checkbox__input(type='checkbox', id='jams')
                label.checkbox__label(for='jams')
                  | джемы
          button(type='submit')
            | Применить
